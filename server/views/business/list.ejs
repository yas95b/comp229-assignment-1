<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="offset-md-0 col-md-9">
            <h1><%= title %></h1>
            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/business-list/add"  class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Contact</a>
               <% } %> 
            <br>
            <table class="table  table-striped table-hover">
                <!-- Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-3">Name</th>
                    <th class="text-center col-3">Number</th>
                    <th class="text-center col-4">Email</th>
                    <% if(typeof displayName == 'string' && displayName) { %>
                    <th class="text-center col-3"></th>
                    <th class="text-center col-3"></th>                    
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr class="d-flex">
                        <td class="text-center col-3"><%= BusinessList[count].Name %></td>
                        <td class="text-center col-3"><%= BusinessList[count].Number %></td>
                        <td class="text-center col-4"><%= BusinessList[count].Email %></td>

                        <% if(typeof displayName == 'string' && displayName) { %>
                        <td class="text-center col-3">
                            <a href="/business-list/edit/<%= BusinessList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-3">
                                <a href="/business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                        <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





